@inproceedings{todorov2003Proc.25thAnnu.Int.Conf.IEEEEng.Med.Biol.Soc.IEEECatNo03CH37439_UnsupervisedLearningSensorymotor,
  title = {Unsupervised Learning of Sensory-Motor Primitives},
  booktitle = {Proceedings of the 25th {{Annual International Conference}} of the {{IEEE Engineering}} in {{Medicine}} and {{Biology Society}} ({{IEEE Cat}}. {{No}}.{{03CH37439}})},

  month = feb,
  journal = {Proceedings of the National Academy of Sciences},
  volume = {99},
  number = {4},
  pages = {2299--2302},
  issn = {0027-8424, 1091-6490},
  doi = {10.1073/pnas.032682099},
  abstract = {The basic question of whether the human brain controls continuous movements intermittently is still under debate. Here we show that 6- to 9-Hz pulsatile velocity changes of slow finger movements are directly correlated to oscillatory activity in the motor cortex, which is sustained by cerebellar drive through thalamus and premotor cortex. Our findings suggest that coupling of 6- to 9-Hz oscillatory activity in the cerebello\textendash thalamo\textendash cortical loop represents the neural mechanism for the intermittent control of continuous movements.},

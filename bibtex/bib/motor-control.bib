@article{kaufman2016eNeuro_LargestResponseComponent,
  title = {The {{Largest Response Component}} in the {{Motor Cortex Reflects Movement Timing}} but {{Not Movement Type}}},
  author = {Kaufman, Matthew T. and Seely, Jeffrey S. and Sussillo, David and Ryu, Stephen I. and Shenoy, Krishna V. and Churchland, Mark M.},
  year = {2016},
  month = jul,

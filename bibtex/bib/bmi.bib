@article{scharnowski2015BiologicalPsychology_ManipulatingMotorPerformance,
  title = {Manipulating Motor Performance and Memory through Real-Time {{fMRI}} Neurofeedback},
  author = {Scharnowski, Frank and Veit, Ralf and Zopf, Regine and Studer, Petra and Bock, Simon and Diedrichsen, J{\"o}rn and Goebel, Rainer and Mathiak, Klaus and Birbaumer, Niels and Weiskopf, Nikolaus},
  year = {2015},

@article{muller2017J.NeuralEng._MathematicalModelTwolearners,
  title = {A Mathematical Model for the Two-Learners Problem},
  author = {M{\"u}ller, Jan Saputra and Vidaurre, Carmen and Schreuder, Martijn and Meinecke, Frank C. and von B{\"u}nau, Paul and M{\"u}ller, Klaus-Robert},
  year = {2017},
